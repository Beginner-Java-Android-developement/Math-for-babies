<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MathActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr" android:textDirection="ltr"
        android:layout_gravity="center" android:gravity="center"
        >

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB00"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB01"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB02"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB03"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB04"
            android:src="@mipmap/banana"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr" android:textDirection="ltr"
        android:layout_gravity="center" android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        >

        <ImageView
            android:textDirection="ltr" android:layoutDirection="ltr"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivSignId"
            android:src="@mipmap/plussign"
            android:scaleType="fitXY"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr" android:textDirection="ltr"
        android:layout_gravity="center" android:gravity="center"
        >

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB10"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB11"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB12"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB13"
            android:src="@mipmap/banana"/>

        <ImageView
            style="@style/math_style"
            android:id="@+id/ivB14"
            android:src="@mipmap/banana"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr" android:textDirection="ltr"
        android:layout_gravity="center" android:gravity="center"
        android:layout_marginTop="30dp"
        >

        <EditText
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:hint="="
            android:textSize="20dp"
            android:textAlignment="center"
            android:maxLength="2"
            android:id="@+id/etAnswerId"
            android:layout_marginRight="30dp"
            android:focusable="true"
            android:inputType="number"
            />

        <ImageButton
            android:textDirection="ltr"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ibSendAnswer"
            android:tooltipText="Go"
            android:background="@mipmap/send"
            />

    </LinearLayout>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivFeedbackId"
        android:src="@mipmap/boots"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:layout_gravity="center" android:textDirection="ltr"/>


</LinearLayout>